{
    "openapi": "3.1.0",
    "info": {
        "title": "Basic referencing",
        "version": "1.0.0"
    },
    "paths": {
        "/foo": {
            "$ref": "pathitems/foo"
        }
    },
    "components": {
        "responses": {
            "foo": {
                "description": "OK",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/bar"
                        }
                    }
                },
                "links": {
                    "self": {
                        "operationRef": "pathitems/foo#/filler/get"
                    }
                }
            }
        },
        "schemas": {
            "bar": {
                "type": ["string", "null"],
                "example": null,
                "default": "four"
            }
        }
    }
}
